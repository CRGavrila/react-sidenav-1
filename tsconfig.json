{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": ["es5", "es6", "dom"],
        "baseUrl": ".",
        "paths": {
            "react-sidenav": ["src"],
            "react-sidenav/*": ["src/*"]
        },
        "declaration": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "./src/**/*", "src/declarations.d.ts"
    ]    
}
