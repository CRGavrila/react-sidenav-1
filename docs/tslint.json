{
    "extends": [
      "tslint:recommended", 
      "tslint-react", 
      "tslint-config-prettier"
    ],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts"
      ]
    },
    "rules": {
      "ordered-imports": false,
      "no-console": true,
      "object-literal-sort-keys": false,
      "no-unused-expression": true,
      "interface-name": true,      
      "max-classes-per-file": false,
      "no-trailing-whitespace": [true, "ignore-comments"],
      "indent": [true, "spaces", 2]
    }
  
  }
  